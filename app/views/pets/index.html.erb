<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="hidden justify-between items-center">
    <h1 class="font-bold text-4xl">Pets</h1>
    <%= link_to 'New pet', new_pet_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="pets" class="grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-24 mb-24">
    <% @pets.each do |pet| %>
      <%= render "pet_card", pet: pet %>
    <% end %>
  </div>
</div>
